{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [true, { "singleQuote": true, "tabWidth": 2 }],
    "arrow-body-style": ["error", "as-needed"],
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "quotes": ["error", "single"],
    "semi": "error"
  }
}
